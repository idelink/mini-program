{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "plugins": [],
  "rules": {
    "semi": ["error", "never"],
    // allow async-await
    "generator-star-spacing": "off",
    "space-before-function-paren": ["error", "never"],
    "eqeqeq": "off",
    "camelcase": "off"
  },
  "globals": {
    "wx": true,
    "App": true,
    "getApp": true,
    "Page": true,
    "Component": true
  }
}
